<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_button_form_inherit" model="ir.ui.view">
            <field name="name">project.project.purchase.button.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@class='oe_stat_button'][3]" position="after">
                    <button name="action_open_appointment_th" type="object" class="oe_stat_button"
                            icon="fa-calendar">
                        <div class="o_stat_info">

                            <span class="o_stat_text">Purchase</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>