<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_move_in_out" model="ir.ui.view">
            <field name="name">Stock Move IN/OUT</field>
            <field name="model">stock.move.in.out</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" invisible="0" readonly="1"/>
                    <field name="date" groups="base.group_no_one"
                           decoration-danger="(state not in ('cancel','done')) and date &gt; current_date"/>
                    <field name="begin_qty" invisible="0" readonly="1"/>
                    <field name="move_in" invisible="0" readonly="1"/>
                    <field name="move_out" invisible="0" readonly="1"/>
                    <field name="end_qty" invisible="0" readonly="1"/>
                    <field name="reference"/>
                    <field name="picking_type_id" invisible="1" optional="hide"/>
                    <field name="location_id" options="{'no_create': True}" string="From"/>
                    <field name="location_dest_id" options="{'no_create': True}" string="To"/>
                    <field name="product_uom" options="{'no_open': True, 'no_create': True}" optional="hide"
                           string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                    <field name="state" widget="badge" decoration-success="state == 'done'"
                           decoration-info="state not in ('done', 'cancel')"/>
                </tree>
            </field>
        </record>
        <record id="stock_in_out_search" model="ir.ui.view">
            <field name="name">Stock Move IN/OUT</field>
            <field name="model">stock.move.in.out</field>
            <field name="arch" type="xml">
                <search>
                    <field name="location_id" string="Location" filter_domain="['|','|','|', ('location_id', 'ilike', self), ('location_dest_id', 'ilike', self), ('location_id.location_id', 'ilike', self), ('location_dest_id.location_id.name', 'ilike', self)]"/>
                    <field name="warehouse_id" string="Warehouse" filter_domain="['|', ('location_id.warehouse_id', 'ilike', self), ('location_dest_id.warehouse_id', 'ilike', self)]"/>
                    <field name="product_id"/>
                    <filter name="group_by_name_in_out" string="Group By Product Name" context="{'group_by':'product_id'}"/>
                </search>
            </field>
        </record>
        <record id="view_stock_in_out_tree_config" model="ir.actions.act_window">
            <field name="name">Stock Move IN/OUT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.move.in.out</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_stock_move_in_out"/>
            <field name="search_view_id" ref="stock_in_out_search"/>
            <field name="context">{'search_default_group_by_name_in_out': 1}
            </field>
        </record>
        <menuitem id="menu_Stock_Move_in_out" name="Stock Move IN/OUT" parent="stock.menu_warehouse_report" sequence="250" action="view_stock_in_out_tree_config"/>
    </data>
</odoo>